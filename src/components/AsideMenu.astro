---
import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";

import SideMenuItem from "@/components/SideMenu/SideMenuItem.astro";
import SideMenuCard from "@/components/SideMenu/SideMenuCard.astro";

import { playlists } from "@/lib/data";
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="p-2 rounded-lg bg-zinc-900">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
         Inicio
      </SideMenuItem>
      <SideMenuItem href="/#">
        <SearchIcon />
         Buscar
      </SideMenuItem>
    </ul>
  </div>

  <div class="flex-1 p-2 rounded-lg bg-zinc-900">
    <ul>
      <SideMenuItem href="/#">
        <LibraryIcon />
         Tu biblioteca
      </SideMenuItem>

      {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
    </ul>
  </div>
</nav>
